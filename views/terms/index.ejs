<!-- all-terms/index.ejs  ADD LINKS TO SHOW PAGE INSIDE FOR LOOP-->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>View all terms</title>
  </head>
  <body class="view-body">
    <%- include('../partials/_navbar.ejs') %>
    <div class="all-terms-body">
    <div class="all-terms-header">
    <h1>
        <table class="view-table">
            <thead>
                <tr class="table-head">
                    <th >Term</th>
                    <th >Definition</th>
                    <th >Category</th>
                </tr>
            </thead>
            <tbody>
            </div>
            <% terms.forEach((term) => { %>
                <tr class="entries">
                    <a href="/terms/<%= term._id %>">
                    <td><%= term.term %></td>
                    <td><%= term.definition %></td>
                    <td><%= term.category %></td>
                </a>
                </tr>
            <% }) %>
            </tbody>
            </div>
        </table>
    </h1>
  </body>
</html>